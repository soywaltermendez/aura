    <div class="flex justify-between h-16">
      <div class="flex">
        <!-- Logo -->
        <div class="flex-shrink-0 flex items-center">
          <%= link_to root_path, class: "text-blue-600 font-bold text-xl" do %>
            Aura
          <% end %>
        </div>
      </div>

      <% if user_signed_in? %>
