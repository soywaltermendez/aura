<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900"><%= t('.title') %></h1>
      <p class="mt-2 text-sm text-gray-700"><%= t('.description') %></p>
    </div>
  </div>

  <div class="mt-8 space-y-6">
    <% @mood_entries.each do |entry| %>
      <div class="bg-white shadow-sm rounded-lg p-6">
        <div class="flex items-start justify-between">
          <div class="flex items-center space-x-3">
            <span class="text-2xl"><%= MoodEntry::MOODS[entry.mood] %></span>
            <p class="text-sm text-gray-500">
              <%= l(entry.created_at.in_time_zone, format: :long) %>
            </p>
          </div>
          <div class="flex items-center">
            <div class="text-sm text-gray-500">
              <%= t('.energy_level', level: entry.energy_level) %>
            </div>
          </div>
        </div>

        <div class="mt-4">
          <div class="flex flex-wrap gap-2">
            <% entry.activities.each do |activity| %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= t("mood_entries.activities.#{activity}") %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 