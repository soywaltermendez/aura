<div class="mt-8">
  <h2 class="text-lg font-medium text-gray-900 mb-4">
    <%= t('mood_entries.list.title') %>
  </h2>

  <div class="space-y-4">
    <% @today_entries.each do |entry| %>
      <div class="bg-white shadow-sm rounded-lg p-4">
        <div class="flex items-start justify-between">
          <div class="flex items-center space-x-3">
            <span class="text-2xl"><%= MoodEntry::MOODS[entry.mood] %></span>
            <div>
              <p class="text-sm font-medium text-gray-900">
                <%= t("mood_entries.moods.#{entry.mood}") %>
              </p>
              <p class="text-sm text-gray-500">
                <%= l(entry.created_at.in_time_zone, format: :time_only) %>
              </p>
            </div>
          </div>
          <div class="text-yellow-500">
            <%= "âš¡" * entry.energy_level %>
          </div>
        </div>

        <% if entry.notes.present? %>
          <div class="mt-3 text-sm text-gray-700">
            <%= simple_format(entry.notes, class: "mb-2") %>
          </div>
        <% end %>

        <div class="mt-3 flex flex-wrap gap-2">
          <% entry.activities.each do |activity| %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <%= t("mood_entries.activities.#{activity}") %>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div> 