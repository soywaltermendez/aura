<% content_for :title do %>
  Cambia tu contraseña
<% end %>

<div class="text-center mb-8">
  <p class="text-gray-600">Elige una nueva contraseña segura</p>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "mt-8 space-y-6" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="space-y-4">
    <div>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
          class: "appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 sm:text-sm",
          placeholder: "Nueva contraseña (#{@minimum_password_length} caracteres mínimo)" %>
    </div>

    <div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 sm:text-sm",
          placeholder: "Confirma tu nueva contraseña" %>
    </div>
  </div>

  <div class="mt-8">
    <%= f.submit "Cambiar mi contraseña",
        class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 shadow-md hover:shadow-lg" %>
  </div>
<% end %>

<div class="mt-6 text-center">
  <div class="text-sm">
    <%= link_to "Volver al inicio de sesión", new_session_path(resource_name),
        class: "font-medium text-blue-600 hover:text-blue-500 transition-colors duration-200" %>
  </div>
</div>
