<% content_for :title do %>
  <%= t('devise.sessions.new.title') %>
<% end %>

<div class="text-center mb-8">
  <p class="text-gray-600"><%= t('devise.sessions.new.subtitle') %></p>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
  <div class="space-y-4">
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 sm:text-sm",
          placeholder: t('devise.sessions.new.email_placeholder') %>
    </div>

    <div>
      <%= f.password_field :password, autocomplete: "current-password",
          class: "appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 sm:text-sm",
          placeholder: t('devise.sessions.new.password_placeholder') %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex items-center justify-between mt-4">
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-400 border-gray-300 rounded" %>
        <%= f.label :remember_me, t('devise.sessions.new.remember_me'), 
            class: "ml-2 block text-sm text-gray-700" %>
      </div>
      <%= link_to t('devise.passwords.new.forgot_password'),
          new_password_path(resource_name), 
          class: "text-sm font-medium text-blue-600 hover:text-blue-500 transition-colors duration-200" %>
    </div>
  <% end %>

  <div class="mt-8">
    <%= f.submit t('devise.sessions.new.sign_in'),
        class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 shadow-md hover:shadow-lg" %>
  </div>
<% end %>

<div class="mt-6 text-center">
  <div class="text-sm">
    <%= link_to t('devise.shared.links.sign_up'),
        new_registration_path(resource_name),
        class: "font-medium text-blue-600 hover:text-blue-500 transition-colors duration-200" %>
  </div>
</div>
